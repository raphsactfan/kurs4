<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/17.0.13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ProductManagement">
    <!-- Заголовок -->
    <VBox alignment="CENTER" layoutX="25.0" layoutY="30.0" prefWidth="750.0" spacing="15">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Управление товарами" />

        <!-- Поиск -->
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="searchField" prefWidth="400.0" promptText="Поиск по названию товара" />
            <Button onAction="#handleSearch" text="Поиск" />
            <Button onAction="#clearSearch" text="Сбросить" />
        </HBox>

        <!-- Таблица товаров -->
        <TableView fx:id="productTable" prefHeight="300.0" prefWidth="750.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="213.5999755859375" text="Название" />
                <TableColumn fx:id="quantityColumn" prefWidth="76.0" text="Количество" />
                <TableColumn fx:id="priceColumn" prefWidth="108.800048828125" text="Цена" />
                <TableColumn fx:id="supplierColumn" prefWidth="150.39996337890625" text="Поставщик" />
                <TableColumn fx:id="categoryColumn" prefWidth="152.00006103515625" text="Категория" />
            </columns>
        </TableView>

        <!-- Поля ввода -->
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="nameField" promptText="Название" />
            <TextField fx:id="quantityField" promptText="Количество" />
            <TextField fx:id="priceField" promptText="Цена" />
        </HBox>

        <!-- Поля выбора поставщика и категории -->
        <HBox alignment="CENTER" spacing="10">
            <ComboBox fx:id="supplierComboBox" prefWidth="250.0" promptText="Выберите поставщика" />
            <ComboBox fx:id="categoryComboBox" prefWidth="250.0" promptText="Выберите категорию" />
        </HBox>

        <!-- Кнопки управления -->
        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#handleAddProduct" text="Добавить" />
            <Button onAction="#handleEditProduct" text="Редактировать" />
            <Button onAction="#handleDeleteProduct" text="Удалить" />
        </HBox>
    </VBox>

    <!-- Кнопка назад -->
    <Button layoutX="25.0" layoutY="550.0" onAction="#goBack" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;" text="Назад" />
</AnchorPane>
