<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/17.0.13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SupplierManagement">
    <!-- Заголовок -->
    <VBox alignment="CENTER" layoutX="25.0" layoutY="30.0" prefWidth="750.0" spacing="15">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Управление поставщиками" />

        <!-- Поиск -->
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="searchField" prefWidth="400.0" promptText="Поиск по названию поставщика" />
            <Button onAction="#handleSearch" text="Поиск" />
            <Button onAction="#clearSearch" text="Сбросить" />
        </HBox>

        <!-- Таблица поставщиков -->
        <TableView fx:id="supplierTable" prefHeight="300.0" prefWidth="662.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Название" />
                <TableColumn fx:id="representativeColumn" prefWidth="150.0" text="Представитель" />
                <TableColumn fx:id="phoneColumn" prefWidth="100.0" text="Телефон" />
                <TableColumn fx:id="addressColumn" prefWidth="300.0" text="Адрес" />
            </columns>
        </TableView>

        <!-- Поля ввода -->
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="nameField" promptText="Название" />
            <TextField fx:id="representativeField" promptText="Представитель" />
            <TextField fx:id="phoneField" promptText="Телефон" />
        </HBox>

        <!-- Поля для адреса -->
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="countryField" promptText="Страна" />
            <TextField fx:id="cityField" promptText="Город" />
            <TextField fx:id="streetField" promptText="Улица" />
        </HBox>

        <!-- Кнопки -->
        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#handleAddSupplier" text="Добавить" />
            <Button onAction="#handleEditSupplier" text="Редактировать" />
            <Button onAction="#handleDeleteSupplier" text="Удалить" />
        </HBox>
    </VBox>

    <!-- Кнопка назад -->
    <Button layoutX="25.0" layoutY="550.0" onAction="#goBack" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;" text="Назад" />
</AnchorPane>
