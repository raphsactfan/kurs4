<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.UserProfile" prefHeight="300.0" prefWidth="400.0"
            style="-fx-background-color: #f0f4f8;">

    <VBox alignment="CENTER" layoutX="50" layoutY="30" prefHeight="300.0" prefWidth="300.0" spacing="15">

        <Label fx:id="usernameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Логин: user"/>
        <Label fx:id="totalAmountLabel" style="-fx-font-size: 16px;" text="Сумма заказов: Загрузка..."/>

        <PasswordField fx:id="newPasswordField" promptText="Введите новый пароль"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Повторите новый пароль"/>

        <Button text="Сменить пароль" onAction="#changePassword" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;"/>
        <Button text="Назад" onAction="#goBack" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;"/>

    </VBox>

</AnchorPane>
