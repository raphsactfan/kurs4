<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.13" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.Catalog" prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #f0f4f8;">

    <!-- Панель поиска и фильтрации -->
    <HBox spacing="10" layoutX="20.0" layoutY="10.0" prefHeight="40.0" prefWidth="760.0">
        <TextField fx:id="searchField" promptText="Поиск по названию" prefWidth="200.0" onKeyReleased="#handleSearch"/>
        <ComboBox fx:id="categoryComboBox" promptText="Выберите категорию" prefWidth="150.0" onAction="#filterByCategory"/>
        <TextField fx:id="minPriceField" promptText="Мин. цена" prefWidth="100.0" onKeyReleased="#filterByPriceRange"/>
        <TextField fx:id="maxPriceField" promptText="Макс. цена" prefWidth="100.0" onKeyReleased="#filterByPriceRange"/>
        <Button text="Сброс" onAction="#resetFilters" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>


    <!-- Таблица товаров -->
    <TableView fx:id="productTable" layoutX="20.0" layoutY="60.0" prefHeight="400.0" prefWidth="760.0">
        <columns>
            <TableColumn fx:id="nameColumn" text="Название" prefWidth="200.0"/>
            <TableColumn fx:id="priceColumn" text="Цена" prefWidth="100.0"/>
            <TableColumn fx:id="categoryColumn" text="Категория" prefWidth="150.0"/>
            <TableColumn fx:id="availabilityColumn" text="Наличие" prefWidth="100.0"/>
            <TableColumn fx:id="quantityColumn" text="Количество" prefWidth="150.0"/>
        </columns>
    </TableView>

    <!-- Кнопки Назад и Корзина -->
    <HBox spacing="20" layoutX="20.0" layoutY="500.0">
        <Button text="Назад" onAction="#goBack" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        <Button onAction="#goToCart" style="-fx-background-color: #4caf50; -fx-text-fill: white;">
            <ImageView fitHeight="20" fitWidth="20" />
            Корзина
        </Button>
    </HBox>
</AnchorPane>
