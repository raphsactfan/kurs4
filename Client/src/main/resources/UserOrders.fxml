<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.UserOrders" spacing="20" alignment="CENTER"
      style="-fx-padding: 20; -fx-background-color: #f0f4f8;">

    <!-- Заголовок страницы -->
    <Label text="Мои заказы" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Таблица заказов -->
    <TableView fx:id="ordersTable" prefHeight="400" prefWidth="800">
        <columns>
            <TableColumn fx:id="dateColumn" text="Дата" prefWidth="150"/>
            <TableColumn fx:id="totalAmountColumn" text="Сумма" prefWidth="150"/>
            <TableColumn fx:id="quantityColumn" text="Количество" prefWidth="150"/>
            <TableColumn fx:id="productsColumn" text="Товары" prefWidth="250"/>
            <TableColumn fx:id="checkColumn" text="Чек" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Общее количество заказов и сумма -->
    <HBox spacing="20" alignment="CENTER">
        <Label fx:id="totalOrdersLabel" text="Заказов: 0"
               style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Label fx:id="totalPriceLabel" text="Общая сумма: 0.00 руб."
               style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Кнопка Назад -->
    <HBox layoutX="20.0" layoutY="540.0">
        <Button text="Назад" onAction="#goBack" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>

</VBox>
