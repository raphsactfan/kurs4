<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/17.0.13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.OrderManagement">

    <VBox alignment="CENTER" layoutX="25.0" layoutY="30.0" prefWidth="750.0" spacing="15">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Список заказов" />

        <!-- Поле для поиска -->
        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="searchUserField" promptText="Поиск по пользователю" prefWidth="500.0" />
            <Button onAction="#filterOrdersByUser" text="Поиск" />
            <Button onAction="#resetSearch" text="Сбросить" />
        </HBox>

        <!-- Таблица заказов -->
        <TableView fx:id="ordersTable" layoutX="20.0" layoutY="50.0" prefHeight="400.0" prefWidth="750.0">
            <columns>
                <TableColumn fx:id="orderIdColumn" prefWidth="67.19998168945312" text="ID" />
                <TableColumn fx:id="userColumn" prefWidth="132.0" text="Пользователь" />
                <TableColumn fx:id="dateColumn" prefWidth="130.39996337890625" text="Дата заказа" />
                <TableColumn fx:id="totalAmountColumn" prefWidth="114.39996337890625" text="Сумма" />
                <TableColumn fx:id="quantityColumn" prefWidth="100.0" text="Количество" />
                <TableColumn fx:id="productsColumn" prefWidth="215.20001220703125" text="Товары" />
            </columns>
        </TableView>

    </VBox>

    <!-- Кнопка Назад -->
    <HBox layoutX="20.0" layoutY="540.0">
        <Button onAction="#goBack" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Назад" />
    </HBox>
</AnchorPane>

