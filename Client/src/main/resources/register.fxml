<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="registerPane" prefHeight="366.0" prefWidth="402.0" style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/17.0.13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Register">

    <VBox alignment="CENTER" layoutX="50" layoutY="30" prefHeight="350" prefWidth="300.0" spacing="15">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Регистрация" />

        <VBox spacing="10">
            <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Логин" />
            <TextField fx:id="usernameField" promptText="Введите логин" style="-fx-background-radius: 8; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-padding: 5;" />
        </VBox>

        <VBox spacing="10">
            <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Пароль" />
            <PasswordField fx:id="passwordField" promptText="Введите пароль" style="-fx-background-radius: 8; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-padding: 5;" />
        </VBox>

        <VBox spacing="10">
            <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Подтвердить пароль" />
            <PasswordField fx:id="confirmPasswordField" promptText="Введите пароль ещё раз" style="-fx-background-radius: 8; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-padding: 5;" />
        </VBox>

        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#handleRegister" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;" text="Подтвердить" />
                <Button onAction="#goToLogin" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;" text="Назад" />
        </HBox>
    </VBox>
</AnchorPane>
