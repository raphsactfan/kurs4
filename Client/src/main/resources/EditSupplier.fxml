<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EditSupplier" prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #f8f9fa;">
    <VBox alignment="CENTER" spacing="15" layoutX="20.0" layoutY="20.0" prefHeight="260.0" prefWidth="360.0">
        <!-- Заголовок окна -->
        <Label text="Редактирование поставщика" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <!-- Поля ввода -->
        <VBox spacing="10">
            <TextField fx:id="nameField" promptText="Название" />
            <TextField fx:id="representativeField" promptText="Представитель" />
            <TextField fx:id="phoneField" promptText="Телефон" />
        </VBox>

        <!-- Поля ввода для адреса -->
        <VBox spacing="10">
            <TextField fx:id="countryField" promptText="Страна" />
            <TextField fx:id="cityField" promptText="Город" />
            <TextField fx:id="streetField" promptText="Улица" />
        </VBox>

        <!-- Кнопки -->
        <HBox alignment="CENTER" spacing="15">
            <Button text="Сохранить" onAction="#handleSave" />
            <Button text="Отмена" onAction="#handleCancel" />
        </HBox>
    </VBox>
</AnchorPane>
