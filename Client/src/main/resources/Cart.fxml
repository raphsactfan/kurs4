<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.Cart" spacing="20" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f0f4f8;">

    <!-- Заголовок -->
    <Label text="Корзина" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Прокручиваемая область для списка товаров -->
    <ScrollPane prefWidth="470" prefHeight="400.0" style="-fx-padding: 10;">
        <TilePane fx:id="cartPane" hgap="10" vgap="10" style="-fx-padding: 10;" prefColumns="2">
        </TilePane>
    </ScrollPane>

    <!-- Итоговая сумма -->
    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
        <Label fx:id="itemCountLabel" text="Количество: 0" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Label fx:id="totalLabel" text="Итог: 0.0" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Button text="Очистить корзину" onAction="#clearCart" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>


    <!-- Кнопки управления -->
    <HBox spacing="20" alignment="CENTER" style="-fx-padding: 10;">
        <Button text="Оформить заказ" onAction="#proceedToCheckout" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Назад в каталог" onAction="#goBack" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </HBox>
</VBox>
